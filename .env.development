# Development Environment Variables
# Domain: healthy.dev
# This file contains development-specific environment variables

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
DOTNET_USE_POLLING_FILE_WATCHER=true
DOTNET_RUNNING_IN_CONTAINER=true

# Database Settings
ConnectionStrings__DefaultConnection=Server=localhost,1433;Database=HealthyDB_Dev;User Id=sa;Password=Dev@Passw0rd123;TrustServerCertificate=true;

# JWT Configuration (ASP.NET Core Standard)
JwtSettings__SecretKey=dev-super-secret-key-with-at-least-32-characters-for-development
JwtSettings__Issuer=healthy-system-dev
JwtSettings__Audience=healthy-system-api-dev
JwtSettings__ExpirationInMinutes=1440
JwtSettings__RefreshTokenExpirationInDays=7

# Redis Settings
ConnectionStrings__RedisConnection=healthy-redis:6379,password=DevRedis@Passw0rd123!
REDIS_HOST=healthy-redis
REDIS_PORT=6379
REDIS_PASSWORD=DevRedis@Passw0rd123!

# API Settings
API_PORT=8080
API_HOST=0.0.0.0
DOMAIN=healthy.dev

# Logging Settings
LOG_LEVEL=Debug
LOG_LEVEL_MICROSOFT=Information
LOGGING_LEVEL=Debug
SERILOG_MINIMUM_LEVEL=Debug

# CORS Settings (Development - more permissive)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8080,http://localhost:5001,https://localhost:3000,https://localhost:4200,http://localhost:8081,https://localhost:8443

# Rate Limiting (Development - more permissive)
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_REQUESTS_PER_HOUR=10000

# Email Settings (development/testing)
EMAIL_SMTP_HOST=smtp.mailtrap.io
EMAIL_SMTP_PORT=2525
EMAIL_SMTP_USERNAME=dev@healthy.dev
EMAIL_SMTP_PASSWORD=dev_email_password
EMAIL_FROM_ADDRESS=noreply@healthy.dev

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
ENABLE_DEVELOPER_EXCEPTION_PAGE=true

# Database Migration Settings
AUTO_MIGRATE_DATABASE=true
SEED_DATABASE=true

# Container Settings
CONTAINER_NAME=healthy-api-dev
COMPOSE_PROJECT_NAME=healthy-system-dev

# Development Tools
ENABLE_PROFILING=true
ENABLE_HOT_RELOAD=true
ENABLE_BROWSER_REFRESH=true

# Security (Development - relaxed for testing)
ENABLE_HTTPS_REDIRECTION=false
REQUIRE_HTTPS=false

# File Upload Settings
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# Cache Settings
CACHE_EXPIRATION_MINUTES=60
ENABLE_RESPONSE_CACHING=true
